<h2> Create a Horse </h2>

<form action="/horses" method="POST">
  <label>Name</label>
  <input type="text" name="horse[name]"><br/>
  <label> Age </label>
  <input type="number" name="horse[age]"><br/>
  <label> Total Winnings </label>
  <input type="number" name="horse[total_winnings]"><br/>
  <label> Breed ID </label>
  <input type="number" name="horse[breed_id]"><br/>
  <label> Jockey ID </label>
  <input type="number" name="horse[jockey_id]"><br/>
  <input type="submit"><br/>
</form>
